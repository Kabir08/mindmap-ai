{
  "manifest_version": 3,
  "name": "MindMap AI",
  "description": "AI-generated mind-maps, stored locally, EOD summary.",
  "version": "1.0.0",
  "icons": { "48": "icons/icon48.png" },

  "action": {
    "default_title": "Open MindMap AI"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}